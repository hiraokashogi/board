<h1>掲示板</h1>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
	<td style="width:20px;border-right-style:solid;border-right-width:1px"><%= post.id %>:  </td>

        <td><%= post.name %></td>
        <td><%= post.created_at %></td>
      </tr>
      <tr>
        <td style="border-right-style:solid;border-right-width:1px" ></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div style="margin-top:20px;">
  <%= form_for(@post) do |f| %>
   <div class="field">
      <%= f.hidden_field, @thread_no %> 
      <%= f.label "名前" %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "内容" %><br>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
